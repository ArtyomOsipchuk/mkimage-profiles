#
# ALT Linux configuration file for GNU screen(1).
# See /usr/share/doc/screen-*/*screenrc sample files.
# Place custom options into ~/.screenrc.
#

# load terminal settings
source /etc/screencap

# disable copyright notice during startup
#startup_message off

# enable visual bell (audible bell is used by default)
vbell on

# define a bigger scrollback, default is 100 lines
defscrollback 999

# remove some stupid/dangerous key bindings
bind ^k
#bind L
bind ^\

# make key bindings better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history
